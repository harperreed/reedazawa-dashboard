html
  head
    title Dashboard
    link(href='https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab', rel='stylesheet')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css', rel='stylesheet', integrity='sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css', integrity='sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M', crossorigin='anonymous')
    style.
      body{
      background-color:000;
      font-family: 'Roboto', serif;
      padding: 10px;
      }
      #dash{
      width:1200px;
      height: 825px;
      border: 1px solid red;
      background-color: #fff;
      color: #000;
      padding:10px;
      position:relative;
      }
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(src='./js/moment.min.js')
    script.
      function timedUpdate () {
      var time = moment().format('LT')
      $("#time").html(time)
      setTimeout(timedUpdate, 1000);
      }
      timedUpdate()
  body
    #dash.container-fluid
      h1.float-right
        .text-right
          span#time 0:00 PM
          br
          span#temp
            img(src='imgs/climacons/Cloud-Drizzle-Alt.svg', alt='Kiwi standing on oval')
          | 75 째
          br
      h1.display-1
        i.fa.fa-home(aria-hidden='true')
        |  Reedazawa
      br
      hr
      .row
        .col
          h3 Location
          .row
            .col
              figure.figure
                img.figure-img.img-fluid.rounded(src='https://maps.googleapis.com/maps/api/staticmap?autoscale=2&size=400x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0x406aff%7Clabel:H%7C2332+w+ohio,+60612', alt='A generic square placeholder image with rounded corners in a figure.')
                figcaption.figure-caption.text-center Harper is at home.
            .col
              figure.figure
                img.figure-img.img-fluid.rounded(src='https://maps.googleapis.com/maps/api/staticmap?autoscale=2&size=400x300&maptype=roadmap&format=png&visual_refresh=true&markers=size:mid%7Ccolor:0xff5ce8%7Clabel:H%7C111+S+Wacker+Dr,+Chicago,+IL+60606', alt='A generic square placeholder image with rounded corners in a figure.')
                figcaption.figure-caption.text-center Hiromi is at work.
        .col
          h3 Last 5 events
          .row
            .col
              table.table.table-striped.table-bordered.table-condensed
                thead
                  tr
                    th Date
                    th Room
                    th Description
                tbody#log
                  tr
                    td an hour ago
                    td Office
                    td Motion Detected
                  tr
                    td an hour ago
                    td Mud Room
                    td Door Locked
                  tr
                    td 2 hours ago
                    td Mud Room
                    td Motion no longer detected
                  tr
                    td 2 hours ago
                    td Mud Room
                    td Motion Detected
                  tr
                    td 2 hours ago
                    td Kitchen
                    td Motion Detected
      .row
        .col
          h3 Thermostats
          .row
            .col
              .text-center
                h1.display-3 58 째
              h3.figure-caption.text-center
                i.fa.fa-fire(aria-hidden='true')
                |  Basement 
                i.fa.fa-fire(aria-hidden='true')
            .col
              .text-center
                h1.display-3 70 째
              h3.figure-caption.text-center
                i.fa.fa-snowflake-o(aria-hidden='true')
                |  First Floor 
                i.fa.fa-snowflake-o(aria-hidden='true')
            .col
              .text-center
                h1.display-3 68 째
              h3.figure-caption.text-center
                i.fa.fa-snowflake-o(aria-hidden='true')
                |  Upstairs 
                i.fa.fa-snowflake-o(aria-hidden='true')
        .col
          .row
            .col
              h3 Tesla charge
              div
                h1.display-1
                  i.fa.fa-battery-quarter(aria-hidden='true')
              h3.figure-caption  25% Charged / 120 Miles
            .col
              h3
    |  1200 by 825px
